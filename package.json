{
  "name": "onyx",
  "type": "module",
  "version": "1.0.0",
  "private": "true",
  "packageManager": "pnpm@9.0.4",
  "description": "Your Figma Plugin",
  "author": "Miguel Franken",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "clean": "turbo clean",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "update-dependencies": "taze major -Ir",
    "publish-packages": "turbo codegen && changeset && changeset version && changeset publish",
    "taze:major": "taze major -wIr",
    "taze:minor": "taze minor -wIr"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.15.0",
    "@changesets/cli": "^2.27.1",
    "eslint": "^8.57.0",
    "taze": "^0.13.6",
    "turbo": "^1.13.2"
  }
}
